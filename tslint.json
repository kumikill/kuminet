{
  "extends" : [
    "tslint:recommended"
  ],
  "rules": {
    "brace-style": [
      true,
      "allman",
      {
        "allowSingleLine": true
      }
    ],
    "forin": false,
    "interface-name": [false],
    "no-console": [false],
    "trailing-comma": [
      true,
      "never"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "one-line": [
      false
    ],
    "no-string-literal": false,
    "no-var-keyword": true,
    "no-namespace": false,
    "prefer-for-of": true,
    "only-arrow-functions": [
      false
    ],
    "quotemark": [
      true,
      "double"
    ],
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false
  }
}
