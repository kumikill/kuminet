{
    "editor.renderWhitespace": "boundary",
    "files.encoding": "utf8",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".rpt2_cache/": true
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "search.exclude": {
        "_book/**": true,
        ".rpt2_cache/**": true,
        "dist/**": true,
        "node_modules/**": true,
        "typings/**": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib",
    "editor.detectIndentation": false
}
