{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "dist",
        "baseUrl": "src/",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noResolve": false,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "pretty": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}
